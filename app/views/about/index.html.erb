<div class="flex flex-col montserrat">
    <% @abouts.each do |about| %>
    <div class="text-3xl text-center my-5 sm:my-10 underline">
        <h1><%= about.title %></h1>
    </div>
    <div class="text-xl mb-5 sm:mb-10 mx-5 sm:mx-20">
        <p class="mb-5"><%= about.content %></p>
    </div>
    <%end%>

    <h1 class="text-center text-3xl my-3 sm:my-10 underline">Our Shop</h1>
    <div class="flex flex-wrap items-center justify-between mx-auto text-xl">
    <% @store_contacts.each do |contact| %>
        <div class="text-lg mx-auto sm:mx-20 py-4">
            <p class="mb-5">Phone: <%= contact.phone %></p>
            <p class="mb-5">E-mail: <%= contact.email %></p>
            <p >Address: <%= contact.location %></p>
        </div>
        <div class="text-lg mx-auto sm:mx-20 py-4 ">
            <p>Open hours:</p>
            <p class="">Mon: <%= contact.open_mon %></p>
            <p class="">Tue: <%= contact.open_tue %></p>
            <p class="">Wed: <%= contact.open_wed %></p>
            <p class="">Thu: <%= contact.open_thu %></p>
            <p class="">Fri: <%= contact.open_fri %></p>
            <p class="">Sat: <%= contact.open_sat %></p>
            <p class="">Sun: <%= contact.open_sun %></p>
        </div>
    <%end%>
    </div>
</div>