<div class='border-2 border-black w-52 m-auto mb-5 p-4 rounded-md'>
    <div class=''>
        <% if product.image.present? %>
          <p><%= link_to image_tag(product.image, style: 'height:150px', class:'m-auto'), product %></p>
        <% end %>
    </div>
    <div class='text-center'>
        <p class='font-semibold'><%= link_to product.brand.name, product %></p>
        <h3 class='text-sm'><%= link_to product.name, product %></h3>
    </div>
</div>