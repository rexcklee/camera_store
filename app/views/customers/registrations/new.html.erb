<div class="flex justify-center">
  <div class="w-1/3 border-2 border-white rounded-lg p-16">
    <h2 class="text-center text-xl mb-5">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-black" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"text-black" %>
      </div>

      <div class="field mb-5">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-black" %>
      </div>

      <div class="actions border rounded-md bg-green-600 text-center p-2 mb-3">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "customers/shared/links" %>
  </div>
</div>
