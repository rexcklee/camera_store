<div class="flex flex-col">
    <div class="flex flex-wrap justify-evenly mb-16">
        <% @categories.each do |category| %>
            <div class="p-3">
                <% if category.image.present? %>
                    <p><%= link_to image_tag(category.image.variant(:small_img), class:'m-auto h-36') , category %></p>
                <% end %>
                <p class="montserrat text-center text-2xl text-blue-950 hover:text-yellow-600 hover:font-semibold">
                    <%= link_to category.name, category%>
                </p>
            </div>
        <% end %>
    </div>
    <% if @new_products.present? %>
    <div class="flex flex-col mb-16">
        <h1 class="montserrat text-center text-3xl font-semibold text-yellow-700 mb-5 underline">New Product</h1>
        <div class="hover:overflow-x-auto overflow-x-hidden flex justify-around items-center">
            <% @new_products.each do |product| %>
                <%= render "products/product", product: product %>
            <%end%>
        </div>
    </div>
    <% end %>
    <% if @updated_products.present? %>
    <div class="flex flex-col mb-16">
        <h1 class="montserrat text-center text-3xl font-bold text-yellow-700 mb-5 underline">Updated Product</h1>
        <div class="hover:overflow-x-auto overflow-x-hidden flex justify-around items-center">
            <% @updated_products.each do |product| %>
            <%= render "products/product", product: product %>
            <%end%>
        </div>
    </div>
    <% end %>
</div>